[
  {
    "id": "R01",
    "if_all": [
      "daun_bercak_coklat",
      "nekrosis_daun",
      "lesi_meluas_saat_lembab"
    ],
    "then": {
      "penyakit": "Blast (Pyricularia oryzae)",
      "saran": [
        "Gunakan varietas tahan penyakit blast.",
        "Aplikasi fungisida berbahan aktif triazol atau strobilurin.",
        "Atur pemupukan nitrogen agar seimbang."
      ]
    }
  },
  {
    "id": "R02",
    "if_all": ["ujung_daun_menguning", "ada_lendir", "daun_mati_memanjang"],
    "then": {
      "penyakit": "Hawar Daun Bakteri (Xanthomonas oryzae)",
      "saran": [
        "Gunakan benih sehat.",
        "Hindari genangan air berlebih.",
        "Bersihkan sisa jerami terinfeksi setelah panen."
      ]
    }
  },
  {
    "id": "R03",
    "if_all": ["tanaman_kerdil", "daun_menguning", "gabah_kosong"],
    "then": {
      "penyakit": "Tungro Virus",
      "saran": [
        "Gunakan varietas tahan tungro.",
        "Kendalikan populasi wereng hijau.",
        "Tanam serempak untuk memutus siklus virus."
      ]
    }
  },
  {
    "id": "R04",
    "if_all": ["batang_lunak", "padi_roboh", "bau_busuk_dari_batang"],
    "then": {
      "penyakit": "Busuk Batang (Fusarium moniliforme)",
      "saran": [
        "Jaga drainase lahan agar tidak tergenang.",
        "Gunakan benih bebas jamur.",
        "Rotasi tanaman untuk memutus siklus patogen."
      ]
    }
  },
  {
    "id": "R05",
    "if_all": [
      "daun_terdapat_garis_kuning",
      "malai_tidak_berisi",
      "tanaman_kurang_tumbuh"
    ],
    "then": {
      "penyakit": "Kerdil Rumput (Rice Grassy Stunt Virus)",
      "saran": [
        "Kendalikan wereng coklat sebagai vektor virus.",
        "Gunakan varietas tahan kerdil rumput.",
        "Hindari penggunaan pupuk nitrogen berlebih."
      ]
    }
  },
  {
    "id": "R06",
    "if_all": [
      "daun_bercak_putih_keabuan",
      "bercak_menyatu_menjadi_luka_lebar",
      "daun_mengering_dari_ujung"
    ],
    "then": {
      "penyakit": "Bercak Daun Coklat (Helminthosporium oryzae)",
      "saran": [
        "Gunakan benih bersertifikat bebas jamur.",
        "Aplikasi fungisida berbahan aktif mankozeb atau difenokonazol.",
        "Pemupukan berimbang terutama unsur kalium."
      ]
    }
  },
  {
    "id": "R07",
    "if_all": [
      "daun_ada_jaring_jamur_putih",
      "daun_menggulung",
      "tanaman_terlihat_kering_tidak_merata"
    ],
    "then": {
      "penyakit": "Hawar Daun Sheath Blight (Rhizoctonia solani)",
      "saran": [
        "Kurangi kepadatan tanam.",
        "Gunakan varietas tahan sheath blight.",
        "Semprotkan fungisida karbendazim saat awal gejala."
      ]
    }
  },
  {
    "id": "R08",
    "if_all": [
      "bulir_menghitam",
      "malai_tidak_berisi",
      "kulit_gabah_menghitam"
    ],
    "then": {
      "penyakit": "Busuk Malai (Sarocladium oryzae)",
      "saran": [
        "Gunakan benih sehat dan kering.",
        "Hindari pemupukan nitrogen berlebih.",
        "Semprotkan fungisida berbahan aktif propikonazol saat fase bunting."
      ]
    }
  },
  {
    "id": "R09",
    "if_all": [
      "daun_menggulung",
      "adanya_serangga_kecil",
      "tanaman_tidak_berisi"
    ],
    "then": {
      "penyakit": "Serangan Wereng Coklat (Nilaparvata lugens)",
      "saran": [
        "Gunakan varietas tahan wereng.",
        "Kendalikan dengan insektisida selektif jika populasi tinggi.",
        "Jaga sanitasi lahan dan hindari tanam terus-menerus varietas sama."
      ]
    }
  },
  {
    "id": "R10",
    "if_all": [
      "akar_membusuk",
      "tanaman_mudah_dicabut",
      "pertumbuhan_terhambat"
    ],
    "then": {
      "penyakit": "Busuk Akar (Sclerotium rolfsii)",
      "saran": [
        "Perbaiki sistem drainase sawah.",
        "Rotasi tanaman non-padi untuk menekan inokulum jamur.",
        "Gunakan agen hayati seperti Trichoderma sp."
      ]
    }
  }
]
